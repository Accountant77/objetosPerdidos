<head>
	<title>Guardar objeto perdido</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="icon" type="image/png" href="images/icons/favicon.ico"/>
	<link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
	<link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
	<link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
	<link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
  <link rel="stylesheet" type="text/css" href="/css/base.css">
</head>

<body>
  <br><br>
  

	<div class="bg-contact3" style="background-image: url('images/bg-01.jpg');">
		<div class="container-contact3">
			<div class="wrap-contact3">
				<form class="contact3-form validate-form" method="POST" action="/objetos/guardar" enctype="multipart/form-data">
					<span class="contact3-form-title">
						Objetos perdidos
					</span>

          <div class="wrap-input3 validate-input" data-validate="El nombre del objeto no es valido">
            <input class="input3" type="text" name="nombrePersona" placeholder="¿Quién lo lo encontró?">
            <span class="focus-input3"></span>
          </div>

          <div class="wrap-input3 validate-input" data-validate="El nombre del objeto no es valido">
            <input class="input3" type="text" name="telefonoPersona" placeholder="Telefono del individuo">
            <span class="focus-input3"></span>
          </div>

					<div class="wrap-input3 validate-input" data-validate="El nombre del objeto no es valido">
						<input class="input3" type="text" name="nombre" placeholder="Cosa u objeto encontrado">
						<span class="focus-input3"></span>
					</div>

					<div class="wrap-input3 validate-input" data-validate = "Message is required">
						<textarea class="input3" name="descripcion" placeholder="Descripción del objeto"></textarea>
						<span class="focus-input3"></span>
					</div>

          <div class="wrap-input3 validate-input" data-validate = "Este campo no puede estar vacio">
						<input class="input3" type="text" name="ubicacion" placeholder="¿Dondé encontró el objeto?">
						<span class="focus-input3"></span>
					</div>
      
          <div class="wrap-contact3-form-radio">
						<div class="contact3-form-radio m-r-42">
							<input class="input-radio3" id="radio3" type="radio" name="category" value="documentos">
							<label class="label-radio3" for="radio3">
								Documentos
							</label>
						</div>

						<div class="contact3-form-radio">
							<input class="input-radio3" id="radio4" type="radio" name="category" value="prendas-vestir">
							<label class="label-radio3" for="radio4">
								Prendas de vestir
							</label>
						</div>
					</div>
          <div class="wrap-contact3-form-radio">
						<div class="contact3-form-radio m-r-42">
							<input class="input-radio3" id="radio5" type="radio" name="category" value="maletas-morrales">
							<label class="label-radio3" for="radio5">
								Maletas/Morral
							</label>
						</div>

						<div class="contact3-form-radio">
							<input class="input-radio3" id="radio6" type="radio" name="category" value="dinero">
							<label class="label-radio3" for="radio6">
								Dinero
							</label>
						</div>
					</div>

					<div class="wrap-input3 validate-input" data-validate="El nombre del objeto no es valido">
						<input class="input3" type="file" name="foto">
						<span class="focus-input3"></span>
					</div>


					<div class="container-contact3-form-btn">
						<input class="contact3-form-btn" type="submit" value="Guardar Objeto">
					</div>
				</form>
			</div>
		</div>
	</div>

	<div id="dropDownSelect1"></div>

	<script src="vendor/jquery/jquery-3.2.1.min.js"></script>
	<script src="vendor/bootstrap/js/popper.js"></script>
	<script src="vendor/bootstrap/js/bootstrap.min.js"></script>
	<script src="vendor/select2/select2.min.js"></script>
	<script>
		$(".selection-2").select2({
			minimumResultsForSearch: 20,
			dropdownParent: $('#dropDownSelect1')
		});
	</script>
	<script src="/js/script.js"></script>

