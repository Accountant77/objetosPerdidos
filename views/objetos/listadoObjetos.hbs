  <!-- CUERPO DEL EJERCICIO -->
  <main>
    <div class="container">
      <div class="row">
        <div class="col-12">
          <input type="text" name="porTitulo" id="buscarTitulo">
          <input type="button" value="Buscar" class="btn btn-primary" id="btnBuscar">
        </div>
      </div>
      <div class="row">
        {{#each objetosPerdidos}}
          <div class="col-6 ">
            <div class="row">
              <div class="col-4">
                  <img src="{{foto}}"  class="img-fluid" style:"width:100%">
              </div>
              <div class="col-8">
                <div class="titulo"> {{nombre}}</div>
                <div class="descripcion"> {{descripcion}}</div>
              </div>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </main>

<script>
	document.getElementById('btnBuscar').onclick=()=>{
    let filtro = document.querySelector('input[name="porTitulo"]').value
    fetch('/objetos/listar-titulo',{
      method: 'post',
      body: JSON.stringify({titulo: filtro}),
      headers: {'Content-Type':'application/json'}
    })
      .then(res=> res.json())
      .then(listado=> console.log(listado))
  }
</script>