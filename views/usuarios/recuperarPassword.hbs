<body>
  <br><br><br>
	<div class="bg-contact3" style="background-image: url('/images/bg-01.jpg');">
		<div class="container-contact3">
			<div class="wrap-contact3">
				<form class="contact3-form validate-form" method="POST" action="/usuarios/recuperar-clave">
					{{#if mensajeOk}}
					<div class="alert alert-success alert-dismissable">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<strong>¡Enhorabuena!</strong> Hemos enviado un correo a tu email.
					</div>
					{{/if}}
					{{#if mensaje}}
					<div class="alert alert-danger alert-dismissable">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<strong>¡Error!</strong>  {{mensaje}} <a href="http://localhost:3000/usuarios/recuperar-clave" class="alert-link">{{mensaje2}}</a>
					</div>
					{{/if}}
					
					<span class="contact3-form-title">
						Recuperar cuenta
					</span>

                    <div class="wrap-input3 validate-input" data-validate="El nombre del objeto no es valido">
                        <input class="input3" type="email" name="email" placeholder="Ingrese su email">
                        <span class="focus-input3"></span>
                    </div>

					<div class="container-contact3-form-btn">
						<input class="contact3-form-btn" type="submit" value="Enviar correo">
					</div>

				</form>
			</div>
		</div>
	</div>


	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
