</head>

<body>
	<br><br><br>


	<div class="bg-contact3" style="background-image: url('/images/bg-01.jpg');">
		<div class="container-contact3">
			<div class="wrap-contact3">
				<form class="contact3-form validate-form" method="POST" action="/usuarios/nuevo">
					<span class="contact3-form-title">
						Registro de usuarios nuevos
					</span>
					{{#if errores}}
					<div class="alert alert-danger alert-dismissable">
						<button type="button" class="close" data-dismiss="alert">&times;</button>
						<strong>¡Error!</strong> {{errores}}
					</div>
					{{/if}}

					<div class="wrap-input3 validate-input" data-validate="El nombre del objeto no es valido">
						<input class="input3" type="text" name="nombreUsuario" placeholder="Ingrese su nombre">
						<span class="focus-input3"></span>
					</div>

					<div class="wrap-input3 validate-input" data-validate="El nombre del objeto no es valido">
						<input class="input3" type="email" name="emailUsuario" placeholder="Ingrese su email">
						<span class="focus-input3"></span>
					</div>

					<div class="wrap-input3 validate-input" data-validate="El nombre del objeto no es valido">
						<input class="input3" type="password" name="password" placeholder="Ingrese una constraseña">
						<span class="focus-input3"></span>
					</div>

					<div class="wrap-contact3-form-radio">
						<div class="contact3-form-radio m-r-42">
							<input class="input-radio3" id="radio3" type="radio" name="tipo" value="Cliente">
							<label class="label-radio3" for="radio3">
								Cliente
							</label>
						</div>

						<div class="contact3-form-radio m-r-42">
							<input class="input-radio3" id="radio5" type="radio" name="tipo" value="Administrador">
							<label class="label-radio3" for="radio5">
								Administrador
							</label>
						</div>
					</div>

					<div class="container-contact3-form-btn">
						<input class="contact3-form-btn" type="submit" value="Guardar Nuevo Usuario">
					</div>
				</form>
			</div>
		</div>
	</div>

	<div id="dropDownSelect1"></div>

	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
	<script src="/vendor/select2/select2.min.js"></script>
	<script>
		$(".selection-2").select2({
			minimumResultsForSearch: 20,
			dropdownParent: $('#dropDownSelect1')
		});
	</script>
	<script src="/js/script.js"></script>

